# Shalean Cleaning Services - Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Base URL for the application (used for auth redirects and email links)
# Development: http://localhost:3000
# Production: https://your-domain.com
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# App URL for email templates and links
# Should match NEXT_PUBLIC_BASE_URL in most cases
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase anonymous key (public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase service role key (private - for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =============================================================================
# PAYMENT PROCESSING (PAYSTACK)
# =============================================================================

# Paystack public key (for client-side payment initialization)
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# Paystack secret key (for server-side operations)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Paystack webhook secret (for verifying webhook signatures)
PAYMENT_WEBHOOK_SECRET=your_paystack_webhook_secret

# =============================================================================
# EMAIL SERVICE (RESEND)
# =============================================================================

# Resend API key for sending emails
RESEND_API_KEY=re_your_resend_api_key

# From email address for outgoing emails
RESEND_FROM_EMAIL=Shalean Cleaning Services <noreply@your-domain.com>

# =============================================================================
# PUSH NOTIFICATIONS (VAPID)
# =============================================================================

# VAPID public key (for client-side push notification subscription)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# VAPID private key (for server-side push notification sending)
VAPID_PRIVATE_KEY=your_vapid_private_key

# =============================================================================
# SECURITY & AUTOMATION
# =============================================================================

# Secret token for cron job authentication (email reminders, etc.)
CRON_SECRET=your_secure_cron_secret_token

# =============================================================================
# DEVELOPMENT NOTES
# =============================================================================

# 1. Copy this file to .env.local for local development
# 2. Never commit .env.local to version control
# 3. For production, set these variables in your deployment platform
# 4. All NEXT_PUBLIC_* variables are exposed to the browser
# 5. All other variables are server-side only

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# The following variables MUST be set for production deployment:
# - NEXT_PUBLIC_BASE_URL
# - NEXT_PUBLIC_APP_URL
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY
# - PAYSTACK_SECRET_KEY
# - PAYMENT_WEBHOOK_SECRET
# - RESEND_API_KEY
# - RESEND_FROM_EMAIL
# - NEXT_PUBLIC_VAPID_PUBLIC_KEY
# - VAPID_PRIVATE_KEY
# - CRON_SECRET
